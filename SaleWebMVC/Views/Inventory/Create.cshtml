@model SalesWebMVC.Models.InventoryMovement
@using SalesWebMVC.Models.Enums

    
@{
    ViewData["Title"] = "New Inventory Movement";
}

<div class="row">
    <div class="col-md-8">
        <h2 class="text-primary-emphasis">@ViewData["Title"]</h2>
    </div>
    <div class="col-4">
        <a asp-action="Index" class="btn btn-lg btn-secondary float-end"><i class="fas fa-arrow-left me-2"></i>Back</a>
    </div>
</div>
<hr />

<div class="card border-primary mb-3" data-role="@ViewBag.UserRole">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <label asp-for="ProductId" class="form-label obrigatorio">Product</label>
                    <select id="ProductId"
                            asp-for="ProductId"
                            asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))"
                            class="form-select input-required-highlight">
                        <option value="">-- Select a product --</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label asp-for="MovementType" class="form-label obrigatorio">Movement status</label>
                    <select asp-for="MovementType" class="form-select input-required-highlight" asp-items="Html.GetEnumSelectList<MovementType>()">
                        <option value="">-- Select movement type --</option>
                    </select>
                    <span asp-validation-for="MovementType" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <label asp-for="Quantity" class="form-label obrigatorio">Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control input-required-highlight" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col-9">
                    <label asp-for="Observation" class="form-label">Observation</label>
                    <textarea asp-for="Observation" class=" form-control" rows="3"></textarea>
                    <span asp-validation-for="Observation" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
            <div class="float-end m-3">
                <input type="submit" value="Create Movement" class="btn btn-primary" />
            </div>
    </form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}