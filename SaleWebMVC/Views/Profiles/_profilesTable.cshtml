@model List<SalesWebMVC.Models.ViewModels.ProfilesIndexViewModel>

<table id="usersTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="table-info">
            <th>Name</th>
            <th>Login</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Login)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td class="text-end">
                    @* Mostrar botão excluir apenas se NÃO for Admin *@
                    @if (item.Role != "Admin")
                    {
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i>
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>