@model IEnumerable<SalesWebMVC.Models.ViewModels.ProfilesIndexViewModel>;

@{
    ViewData["Title"] = "Profiles";
}

<h1 class="text-primary-emphasis">@ViewData["Title"]</h1>
<hr />
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<p class="d-flex justify-content-end m-4">
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<table id="usersTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="table-info">
            <th>Name</th>
            <th>Login</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Login)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td class="text-end">
                    @* Mostrar botão excluir apenas se NÃO for Admin *@
                    @if (item.Role != "Admin"){
                    <a class="btn btn-sm btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"> 
                        <i class="bi bi-pencil-square"></i>
                        </a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/Profiles/Profiles-Index.js" defer>
    </script>
}
