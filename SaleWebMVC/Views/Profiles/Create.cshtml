@model SalesWebMVC.Models.ViewModels.ProfilesCreateViewModel;

@{
    ViewData["Title"] = "Create Profile";
    var roles = ViewBag.Roles as List<string>;
}

<div class="row">
    <div class="col-md-8">
        <h2 class="text-primary-emphasis">@ViewData["Title"]</h2>
    </div>
    <div class="col-4">
        <a asp-action="Index" class="btn btn-lg btn-secondary float-end"><i class="fas fa-arrow-left me-2"></i>Back</a>
    </div>
</div>
<hr />

<div class="card border-primary mb-3" data-role="@ViewBag.UserRole">
    <form asp-action="Create" method="post">
        <div class="card-body">

            <!--#region LINHA1-->
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter login name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter user name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>

            <!--#region LINHA2-->
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <!--#region LINHA3-->
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="BirthDate" class="form-label"></label>
                    <input asp-for="BirthDate" id="birthDate" type="text" class="form-control" placeholder="dd/mm/yyyy" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="BaseSalary" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="BaseSalary" class="form-control" placeholder="0" />
                        <span asp-validation-for="BaseSalary" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!--#region LINHA4-->
            <div class="row">
                <div class="form-group col-md-6" >
                    <label asp-for="Password" class="form-label"></label>
                    <input id="password"  asp-for="Password" class="form-control" type="password" placeholder="Password" autocomplete="off" disabled />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6" >
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input id="confirmPassword" asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" autocomplete="off" disabled />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!--#region LINHA4-->
            <div class="row">
                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" class="form-select" id="roleSelector">
                        @foreach (var role in roles.Where(r => r != "Admin"))
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex mx-2">
                <button type="submit" class="btn btn-primary mx-1">Create</button>
            </div>
        </div>

    </form>



</div>




@section Scripts {
    <script src="~/js/Profiles/Profiles-Create.js" defer>        
    </script>
}