@model SalesWebMVC.Models.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="row">
    <div class="col-md-8">
        <h1 class="text-primary-emphasis">@ViewData["title"]</h1>
    </div>
    <div class="col-4">
        <a asp-action="Index" class="btn btn-lg btn-secondary float-end">Back</a>
    </div>
</div>
<hr />


<div class="card border-primary mb-3">
    <form asp-action="Create" method="post">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Product.Name" class="form-label"></label>
                    <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Product.SupplierId" class="control-label"></label>
                    <select asp-for="Product.SupplierId"
                            asp-items="@(new SelectList(Model.Suppliers, "Id", "Name"))"
                            class="form-control select2">
                        <option value="">-- Select the supplier --</option>
                    </select>
                    <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
                </div>
            </div>
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Product.Price" class="form-label"></label> <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Product.Price" class="form-control" placeholder="0.00" />
                </div>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Product.DepartmentId" class="control-label">Department</label>
                <select id="DepartmentId"
                        asp-for="Product.DepartmentId"
                        asp-items="@(new SelectList(Model.Departments, "Id", "Name", Model.Departments))"
                        class="form-control">
                    <option value="">-- Select the department --</option>
                </select>
            </div>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-lg btn-primary" />
        </div>
    </form>
</div>