@model SalesWebMVC.Models.ViewModels.SellerFormViewModel;

@{
    ViewData["Title"] = "Edit Seller";
}



<div class="card border-primary p-4">
    <div class="card-header">
        <h1 class="text-primary">@ViewData["Title"]</h1>
    </div>
    <form asp-action="edit" method="post">
        <input type="hidden" asp-for="Seller.Id" />

        <!--#region LINHA 1-->
        <div class="row">
            <div class="form-group col-md-6 no-padding">
                <label asp-for="Seller.UserFullName" class="form-label"></label>
                <input asp-for="Seller.UserFullName" class="form-control" readonly />
                <span asp-validation-for="Seller.UserFullName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 no-padding">
                <label asp-for="Seller.Email" class="form-label"></label>
                <input asp-for="Seller.Email" class="form-control" readonly/>
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
        </div>
        <!--#endregion-->
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Seller.SellerStatus" class="control-label">Status</label>
                <select asp-for="Seller.SellerStatus"
                        asp-items="Html.GetEnumSelectList<SalesWebMVC.Models.Enums.SellerStatus>()"                            
                        class="form-control">
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Seller.DepartmentId" class="control-label">Department</label>
                <select id="DepartmentId"
                        asp-for="Seller.DepartmentId"
                        asp-items="@(new SelectList(Model.Departments, "Id", "Name", Model.Seller.DepartmentId))"
                        class="form-control">
                </select>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-flat btn-labeled">Back to index</a>
            <button type="submit" class="btn btn-outline-success btn-labeled btn-flat">Save</button>
        </div>
    </form>
</div>
