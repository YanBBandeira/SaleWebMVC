@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model SalesWebMVC.Models.ViewModels.SalesFromViewModel;

@{
    ViewData["Title"] = "Edit sale";
}

<h1>@ViewData["Title"]</h1>

<hr />


<div class="row">
    <div class="col-md-8">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Edit" id="createForm">
            <input type="hidden" asp-for="SalesRecord.Id" />

            <div class="form-group mb-3">
                <label asp-for="SalesRecord.DepartmentId" class="control-label">Department</label>
                <select id="DepartmentId"
                        asp-for="SalesRecord.DepartmentId"
                        asp-items="@(new SelectList(Model.Departments, "Id", "Name", Model.SalesRecord.DepartmentId))"
                        class="form-control">
                    <option value="">Select a department</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalesRecord.SellerId" class="control-label">Seller</label>
                <select id="SellerId"
                        asp-for="SalesRecord.SellerId"
                        asp-items="@(new SelectList(Model.Sellers, "Id", "UserFullName", Model.SalesRecord.SellerId))"
                        class="form-control">
                    <option value="">Select a seller</option>
                </select>>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" type="date" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="SalesRecord.Amount" class="form-control" />
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status"
                        asp-items="Html.GetEnumSelectList<SalesWebMVC.Models.Enums.SalesStatus>()"
                        class="form-control">
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog justify-content-center">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Sucesso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Created with sucess!
            </div>
            <div class="modal-footer text-center w-100">
                <button type="button" id="goToIndexBtn" class="btn btn-primary align-content-center">Ok</button>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script>
        $(document).ready(function () {
            $('#DepartmentId').change(function () {
                var departmentId = $(this).val();
                var sellerSelect = $('#SellerId');

                sellerSelect.empty();
                sellerSelect.append('<option>Loading...</option>');

                $.ajax({
                    url: '/Sellers/GetSellersByDepartment',
                    data: { departmentId: departmentId },
                    success: function (sellers) {
                        sellerSelect.empty();
                        $.each(sellers, function (i, seller) {
                            sellerSelect.append(`<option value="${seller.id}">${seller.userFullName}</option>`);
                        });
                    },
                    error: function () {
                        alert("Erro ao carregar vendedores.");
                    }
                });
            });
        });
        $(document).ready(function () {
                // Redireciona para a página Index ao clicar no botão da modal
            $('#goToIndexBtn').click(function () {
                window.location.href = '@Url.Action("Index", "SalesRecords")';
            });
        });
    </script>
}