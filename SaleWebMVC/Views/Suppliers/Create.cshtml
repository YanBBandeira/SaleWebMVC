@model SalesWebMVC.Models.ViewModels.SupplierFormViewModel

@{
    ViewData["Title"] = "Create Supplier";
}

<div class="row">
    <div class="col-md-8">
        <h1 class="text-primary-emphasis">@ViewData["title"]</h1>
    </div>
    <div class="col-4">
        <a asp-action="Index" class="btn btn-lg btn-secondary float-end">Back</a>
    </div>
</div>
<hr />


<div class="card border-primary mb-3">
    <form asp-action="Create" method="post">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Supplier.Name" class="form-label"></label>
                    <input asp-for="Supplier.Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Supplier.Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Supplier.Phone" class="form-label"></label>
                    <input asp-for="Supplier.Phone" type="tel" class="form-control" placeholder="(XX) XXXXX-XXXX" / />
                    <span asp-validation-for="Supplier.Phone" class="text-danger"></span>
                </div>
            </div>
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Supplier.Email" class="form-label"></label>
                    <input asp-for="Supplier.Email" type="email" placeholder="exemplo@dominio.com" class="form-control" />
                <span asp-validation-for="Supplier.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Supplier.CNPJ" class="form-label"></label>
                <input asp-for="Supplier.CNPJ" class="form-control" />
                <span asp-validation-for="Supplier.CNPJ" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label>Estado</label>
                <select id="StateId" name="StateId" class="form-control select2">
                    <option value="">-- Select a state --</option>
                    @foreach (var state in Model.States)
                    {
                        <option value="@state.Id">@state.Name (@state.UF)</option>
                    }
                </select>
            </div>
            <div class="form-group col-6">
                <label asp-for="Supplier.CityId">City</label>
                <select id="Supplier_CityId" asp-for ="Supplier.CityId" class="form-control select2" disabled>
                    <option value="">-- Choose the state first --</option>
                </select>
                <span asp-validation-for="Supplier.CityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-lg btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/Suppliers/Suppliers.js" defer>
    </script>
}
