@model IEnumerable<SalesWebMVC.Models.Department>

@{
    ViewData["Title"] = "Departments";
}


<div class="row">
    <div class="col-md-8">
        <h1 class="text-primary-emphasis">@ViewData["Title"]</h1>
    </div>
    <div class="col-4">
        <a asp-action="Create" class="btn btn-lg btn-success float-end">New Department</a>
    </div>
</div>
<hr />

<div class="card border-primary p-4">
    <div class="row">
        <div class="col-md-12">
            <table id="departmentsTable" class=" table table-striped table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="row">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-light">
                            <td class="col-md-8">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id"> <i class="bi bi-eye"></i></a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/Departments/Departments-Index.js" defer></script>
}